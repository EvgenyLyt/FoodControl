<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:orientation="vertical"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false">
        <TextView
            android:id="@+id/text_ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingStart="@dimen/pad"
            android:paddingEnd="@dimen/pad"
            android:text=""
            android:textSize="@dimen/text_size"
            android:fontFamily="serif"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic">
        </TextView>
        <TextView
            android:id="@+id/text_ingredient_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/pad"
            android:paddingEnd="@dimen/pad"
            android:textColor="@color/colorGray"
            android:fontFamily="serif"
            android:text=""
            android:textSize="@dimen/text_small">
        </TextView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_delete_igredient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="#ffba98"
        android:clickable="true"
        app:srcCompat="@drawable/delete_ingredient" />
</LinearLayout>